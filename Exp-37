import cv2
import numpy as np
from google.colab.patches import cv2_imshow

# Read correct file name
img = cv2.imread("smile.jpeg")

# Safety check
if img is None:
    raise Exception("Image not loaded — filename mismatch")

# Convert to HSV
hsv = cv2.cvtColor(img, cv2.COLOR_BGR2HSV)

# Color range (example red)
lower = np.array([0,120,70])
upper = np.array([10,255,255])

# Mask (detect object color)
mask = cv2.inRange(hsv, lower, upper)

# Invert mask → remove foreground
mask_inv = cv2.bitwise_not(mask)

background = cv2.bitwise_and(img, img, mask=mask_inv)

cv2_imshow(background)
