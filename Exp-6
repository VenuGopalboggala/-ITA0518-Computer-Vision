import cv2
import numpy as np
from google.colab.patches import cv2_imshow

# Read the uploaded image
image = cv2.imread("input.jpg")   # change name if your file is different

if image is None:
    print("Error: Image not found!")
else:
    print("Original Image:")
    cv2_imshow(image)

    # Create a kernel (structuring element)
    kernel = np.ones((5,5), np.uint8)

    # Apply erosion
    eroded_image = cv2.erode(image, kernel, iterations=1)

    print("Eroded Image:")
    cv2_imshow(eroded_image)

    # Save the result
    cv2.imwrite("eroded_output.jpg", eroded_image)

    print("Eroded image saved successfully!")
