import cv2
from google.colab.patches import cv2_imshow

# Read image
image = cv2.imread("input.jpeg")   # change name if required

if image is None:
    print("Error: Image not found!")
else:
    print("Original Image:")
    cv2_imshow(image)

    # Rotate 90 degrees clockwise
    rotated = cv2.rotate(image, cv2.ROTATE_90_CLOCKWISE)

    print("Rotated Image (90 Degree Clockwise):")
    cv2_imshow(rotated)

    # Save rotated image
    cv2.imwrite("rotated_output.jpg", rotated)

    print("Rotated image saved successfully!")
