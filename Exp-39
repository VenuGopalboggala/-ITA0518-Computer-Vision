import cv2

cap = cv2.VideoCapture("video.mp4")

frames=[]
fps = cap.get(cv2.CAP_PROP_FPS)/4   # slow motion
w = int(cap.get(3))
h = int(cap.get(4))

while True:
    ret,frame = cap.read()
    if not ret:
        break
    frames.append(frame)

cap.release()

out = cv2.VideoWriter("reverse_slow.mp4",
                      cv2.VideoWriter_fourcc(*'mp4v'),
                      fps,(w,h))

for f in reversed(frames):
    out.write(f)

out.release()
print("Reverse slow motion video saved")
